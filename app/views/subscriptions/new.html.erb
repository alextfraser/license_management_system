<div class="max-w-2xl">
  <div class="mb-6">
    <%= link_to "â† Back to Subscriptions", account_subscriptions_path(@account), class: "text-gray-600 hover:text-gray-900" %>
  </div>

  <div class="bg-white shadow rounded-lg p-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Add Subscription</h1>
    <p class="text-gray-600 mb-6"><%= @account.name %></p>

    <%= form_with model: [@account, @subscription], class: "space-y-6" do |form| %>
      <% if @subscription.errors.any? %>
        <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded">
          <ul class="list-disc list-inside">
            <% @subscription.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :product_id, "Product", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :product_id, 
            options_from_collection_for_select(@products, :id, :name, @subscription.product_id),
            { include_blank: "Select a product" },
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <div>
        <%= form.label :number_of_licenses, "Number of Licenses", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.number_field :number_of_licenses, min: 1, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "10" %>
      </div>

      <div>
        <%= form.label :expires_at, "Expires Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.date_field :expires_at, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        <p class="text-sm text-gray-500 mt-1">Subscription starts today and expires on this date</p>
      </div>

      <div class="flex space-x-3">
        <%= form.submit "Add Subscription", class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded font-medium cursor-pointer" %>
        <%= link_to "Cancel", account_subscriptions_path(@account), class: "bg-gray-200 hover:bg-gray-300 text-gray-800 px-6 py-2 rounded font-medium" %>
      </div>
    <% end %>
  </div>
</div>
