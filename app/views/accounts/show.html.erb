<div class="max-w-4xl">
  <div class="mb-6">
    <%= link_to "← Back to Accounts", accounts_path, class: "text-gray-600 hover:text-gray-900" %>
  </div>

  <div class="bg-white shadow rounded-lg p-8 mb-6">
    <h1 class="text-3xl font-bold text-gray-900 mb-6"><%=@account.name %></h1>

    <div class="grid grid-cols-3 gap-6">
      <div class="bg-blue-50 rounded-lg p-6">
        <div class="text-3xl font-bold text-blue-600"><%= @account.users.count %></div>
        <div class="text-sm text-gray-600 mt-1">Users</div>
        <%= link_to "Manage →", account_users_path(@account), class: "text-blue-600 hover:text-blue-800 text-sm font-medium mt-2 inline-block" %>
      </div>

      <div class="bg-green-50 rounded-lg p-6">
        <div class="text-3xl font-bold text-green-600"><%= @account.subscriptions.count %></div>
        <div class="text-sm text-gray-600 mt-1">Subscriptions</div>
        <%= link_to "Manage →", account_subscriptions_path(@account), class: "text-green-600 hover:text-green-800 text-sm font-medium mt-2 inline-block" %>
      </div>

      <div class="bg-purple-50 rounded-lg p-6">
        <div class="text-3xl font-bold text-purple-600"><%= @account.license_assignments.count %></div>
        <div class="text-sm text-gray-600 mt-1">License Assignments</div>
        <%= link_to "Manage →", account_license_assignment_path(@account), class: "text-purple-600 hover:text-purple-800 text-sm font-medium mt-2 inline-block" %>
      </div>
    </div>
  </div>

  <div class="flex space-x-4">
    <%= link_to "Manage Users", account_users_path(@account), class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded font-medium" %>
    <%= link_to "Manage Subscriptions", account_subscriptions_path(@account), class: "bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded font-medium" %>
    <%= link_to "Assign Licenses", account_license_assignment_path(@account), class: "bg-purple-600 hover:bg-purple-700 text-white px-6 py-3 rounded font-medium" %>
  </div>
</div>
