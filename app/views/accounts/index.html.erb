<div class="max-w-4xl">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Accounts</h1>
    <%= link_to "New Account", new_account_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded font-medium" %>
  </div>

  <div class="bg-white shadow rounded-lg divide-y divide-gray-200">
    <% @accounts.each do |account| %>
      <div class="p-6 hover:bg-gray-50">
        <div class="flex items-center justify-between">
          <div>
            <h2 class="text-xl font-semibold text-gray-900"><%= account.name %></h2>
            <p class="text-sm text-gray-600 mt-1">
              <%= pluralize(account.users.count, 'user') %> â€¢ 
              <%= pluralize(account.subscriptions.count, 'subscription') %>
            </p>
          </div>
          <div class="flex space-x-3">
            <%= link_to "View", account_path(account), class: "text-blue-600 hover:text-blue-800 font-medium" %>
            <%= link_to "Users", account_users_path(account), class: "text-gray-600 hover:text-gray-800 font-medium" %>
            <%= link_to "Subscriptions", account_subscriptions_path(account), class: "text-gray-600 hover:text-gray-800 font-medium" %>
            <%= link_to "Licenses", account_license_assignment_path(account), class: "text-green-600 hover:text-green-800 font-medium" %>
          </div>
        </div>
      </div>
    <% end %>

    <% if @accounts.empty? %>
      <div class="p-12 text-center text-gray-500">
        <p class="text-lg">No accounts yet</p>
        <p class="text-sm mt-2">Create your first account to get started</p>
      </div>
    <% end %>
  </div>
</div>
